                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="sifre" class="form-control" placeholder="Password" value="awd.123456">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-12">
                        <button type="submit" onclick="Login()" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>

                </div>
                <p class="mb-1 mt-3">
                    <a href="ForgotPass">Şifremi Unuttum</a>
                </p>
            </div>

        </div>

    </div>
</div>

