<script src="~/js/Login.js"></script>


<div class="login-page" style="background:none !important">
    <div class="login-box">
        <h3 style="display:none">Giriş</h3>

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <label style="font-size:28px"><b>E-Market'e Hoş Geldiniz</b></label>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Giriş Yapınız</p>
                <div class="input-group mb-3">
                    <input type="email" id="email" class="form-control" placeholder="Email" autocomplete="off" value="g@mail.com">
